@page
@model VideoOnDemand.Admin.Pages.Downloads.DeleteModel

@using Microsoft.AspNetCore.Identity
@using VideoOnDemand.Data.Data.Entities
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Delete Download";
}

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>@ViewData["Title"]</h2>
            <page-button path="Downloads/Index" bootstrap-style="primary"
                         glyph="info-sign" description="Back to List"></page-button>
            <page-button path="Downloads/Edit" bootstrap-style="success" 
                         glyph="Edit" description="Edit" id="@Model.Input.Id"></page-button>
            <page-button path="Index" bootstrap-style="warning"
                         glyph="list-alt" description="Dashboard"></page-button>
            <p></p>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Input.Title)</dt>
                <dd>@Html.DisplayFor(model => model.Input.Title)</dd>
                <dt>@Html.DisplayNameFor(model => model.Input.Course)</dt>
                <dd>@Html.DisplayFor(model => model.Input.Course.Title)</dd>
                <dt>@Html.DisplayNameFor(model => model.Input.Module)</dt>
                <dd>@Html.DisplayFor(model => model.Input.Module.Title)</dd>
            </dl>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.Id" />
                <input type="hidden" asp-for="Input.Title" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

